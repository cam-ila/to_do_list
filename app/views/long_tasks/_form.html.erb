<%= simple_form_for(@long_task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state %>
    <%= f.input :priority %>
    <%= f.input :progress %>
    <%= f.input :type %>
    <%= f.association :list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
