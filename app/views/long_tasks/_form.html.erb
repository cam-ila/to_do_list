<%= simple_form_for(@long_task, url: list_long_task_path)  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state, collection: states %>
    <%= f.input :priority, collection: priorities %>
    <%= f.input :progress %>
    <%= f.input :type %>
    <%= f.association :list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
