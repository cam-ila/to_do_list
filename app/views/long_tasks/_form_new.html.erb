<%= simple_form_for(@long_task, url: { :action => :create })  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state %>
    <%= f.input :priority %>
    <%= f.input :progress %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
