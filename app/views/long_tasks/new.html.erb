<h1>New Long Task</h1>

<%= simple_form_for(@long_task, url: { :action => :create }, remote: true)  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state, collection: states  %>
    <%= f.input :priority, collection: prorities %>
    <%= f.input :progress %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to 'Back', list_long_tasks_path %>
