<h1>New Simple Task</h1>

<%= simple_form_for @simple_task, url: { :action => :create } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, label:"Descripcion" %>
    <%= f.input :state, collection: simple_states, label: "Estado" %>
    <%= f.input :priority, collection: priorities, label:"Prioridad" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
