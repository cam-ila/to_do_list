<tr>    
  <td>
    <p>
      <%= simple_task.description %> 
    </p> 
    <p>  
      <strong>Estado:</strong> <%=simple_task.state %>
      <strong>Prioridad:</strong> <%= priority(simple_task.priority) %>
    </p>
  </td>       
  <td>          
    <%= link_to 'Editar', url_for([:edit, @list, simple_task]), class:"btn btn-warning btn-sm btn-block" %>
    <%= link_to 'Eliminar', url_for([@list, simple_task]), method: :delete, data: { confirm: 'Esta Seguro?' }, class:"btn btn-sm btn-danger btn-block" %>  
  </td> 
</tr>
