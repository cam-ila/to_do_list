<%= simple_form_for @simple_task, url: list_simple_task_path do |f| %>
  <%= f.error_notification %>
<br>
  <div class="form-inputs">
    <%= f.input :description, label: "Descripcion" %>
    <%= f.input :state, collection: simple_states, label: "Estado" %>
    <%= f.input :priority, collection: priorities, label:"Prioridad" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<br>
<% end %>
