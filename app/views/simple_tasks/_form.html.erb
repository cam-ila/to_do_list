<%= simple_form_for @simple_task, url: list_simple_task_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state %>
    <%= f.input :priority %>
    <%= f.input :type %>
    <%= f.association :list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
