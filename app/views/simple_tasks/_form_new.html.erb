<%= simple_form_for @simple_task, url: { :action => :create } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, required: true %>
    <%= f.input :state, collection: ["pendiente", "hecha"], selected: "pendiente" %>
    <%= f.input :priority, collection: ["alta", "media", "baja"], selected: "baja"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>


