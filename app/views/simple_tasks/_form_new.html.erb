<%= simple_form_for @simple_task, url: { :action => :create } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, required: true, label:"Descripcion" %>
    <%= f.input :state, collection: states, selected: states.first, label:"Estado" %>
    <%= f.input :priority, collection: priorities, selected: priorities.first, label:"Prioridad" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>