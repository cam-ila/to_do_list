<h1>New Temporary Task</h1>

<%= simple_form_for(@temporary_task, url: { :action => :create } )do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :state %>
    <%= f.input :priority, collection: priorities %>
    <%= f.input :start %>
    <%= f.input :finish %>
    <%= f.association :list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', list_temporary_tasks_path %>
